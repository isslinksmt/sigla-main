<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                                       http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="ciro.salvio" id="chiusura_anno_inventario">

        <!-- TABELLA DETTAGLIO CHIUSURA inventario-->
        <createTable tableName="chiusura_anno_inventario" remarks="Rappresenta i dettagli degli importi per la chiusura anno inventario" >
            <column name="pg_chiusura" remarks="Progressivo record chiusura" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="anno" remarks="Anno di chiusura" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="tipo_chiusura" remarks="M=Magazzino; I=Inventario" type="CHAR(1)">
                <constraints nullable="false"/>
            </column>

            <!-- TABELLA TIPO AMMORTAMENTO -->
            <column name="cd_categoria_gruppo" remarks="Codice categoria/gruppo" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="esercizio_voce" remarks="Esercizio voce" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="cd_voce_ep" remarks="Codice Identificativo completo del conto del piano." type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="cd_tipo_ammortamento" remarks="Codice Tipo Ammortamento" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="ti_ammortamento" remarks="Tipo Ammortamento" type="CHAR(1)">
                <constraints nullable="false"/>
            </column>

            <column name="esercizio_competenza" remarks="Esercizio Competenza" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="valore_anno_prec" remarks="Valori riferiti all'anno precedente" type="numeric(12, 5)">
                <constraints nullable="false"/>
            </column>
            <column name="valore_incremento" remarks="Nuove acquisizioni e incremento valori bene" type="numeric(12, 5)">
                <constraints nullable="false"/>
            </column>
            <column name="valore_decremento" remarks="Dismissioni e decremento valori bene" type="numeric(12, 5)">
                <constraints nullable="false"/>
            </column>
            <column name="quota_ammortamento" remarks="Totale ammortamento per l'anno" type="numeric(12, 5)">
                <constraints nullable="false"/>
            </column>
            <column name="totale_ammortamento_alienati" remarks="Totale degli ammortamenti dei beni alienati nell'anno" type="numeric(12, 5)">
                <constraints nullable="false"/>
            </column>
            <column name="quota_ammortamento_anno_prec" remarks="Totale ammortamento anno precedente" type="numeric(12, 5)">
                <constraints nullable="false"/>
            </column>
            <column name="dacr" remarks="Data di creazione del record" type="${date.type}">
                <constraints nullable="false"/>
            </column>
            <column name="utcr" remarks="Utenza di creazione del record" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="duva" remarks="Data di ultima variazione del record" type="${date.type}">
                <constraints nullable="false"/>
            </column>
            <column name="utuv" remarks="Utenza di ultima variazione del record" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="pg_ver_rec" remarks="Progressivo di versione del record: viene incrementato di 1 ad ogni variazione" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="chiusura_anno_inventario" constraintName="chiusura_anno_inventario_pkey" columnNames="pg_chiusura,anno,tipo_chiusura,cd_categoria_gruppo"></addPrimaryKey>

        <addForeignKeyConstraint baseColumnNames="cd_categoria_gruppo" baseTableName="chiusura_anno_inventario" constraintName="fk_chiusura_anno_inventario_catgrp_01" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="cd_categoria_gruppo" referencedTableName="categoria_gruppo_invent"/>
        <addForeignKeyConstraint baseColumnNames="esercizio_voce,cd_voce_ep" baseTableName="chiusura_anno_inventario" constraintName="fk_chiusura_anno_inventario_voce_ep_02" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="esercizio,cd_voce_ep" referencedTableName="voce_ep"/>
        <addForeignKeyConstraint baseColumnNames="cd_tipo_ammortamento,ti_ammortamento" baseTableName="chiusura_anno_inventario" constraintName="fk_chiusura_anno_inventario_tipo_amm_03" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="cd_tipo_ammortamento,ti_ammortamento" referencedTableName="tipo_ammortamento"/>
    </changeSet>
</databaseChangeLog>
